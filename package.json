{
  "private": true,
  "scripts": {
    "dev": "npx concurrently -c \"#00BCD4,#009688\" \"cd playground && composer dev\" \"pnpm run npm_package:watch\" --names playground,npm_package --kill-others",
    "typecheck": "pnpm run npm_package:typecheck && pnpm run playground:typecheck",
    "playground:typecheck": "pnpm -F ckeditor5-symfony-playground run typecheck",
    "npm_package:typecheck": "pnpm -F ckeditor5-symfony run typecheck",
    "npm_package:watch": "pnpm -F ckeditor5-symfony run watch",
    "npm_package:build": "pnpm -F ckeditor5-symfony run build",
    "npm_package:test": "pnpm -F ckeditor5-symfony run test",
    "npm_package:test:watch": "pnpm -F ckeditor5-symfony run test:watch"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.4.1",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.37.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "typescript": "^5.9.3",
    "vite": "^7.1.11"
  },
  "lint-staged": {
    "*.{ts,js,mjs,yml,yaml,json,css,scss,html}": [
      "eslint --fix"
    ],
    "*.php": [
      "./vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.dist.php"
    ]
  }
}
